<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.treballengrup.business"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:id="@+id/atras"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@drawable/atras"
            android:onClick="opmain"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="BUSINESS"
            android:textColor="@color/negro"
            android:layout_marginLeft="90dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="70sp"
            android:layout_height="70sp"
            app:srcCompat="@drawable/iconosmovil"
            android:layout_marginRight="10dp"
            android:onClick="bmovil"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="70sp"
            android:layout_height="70sp"
            app:srcCompat="@drawable/iconoropa"
            android:layout_marginRight="10dp"
            android:onClick="bropa"
            />

        <ImageView
            android:id="@+id/logo3"
            android:layout_width="70sp"
            android:layout_height="70sp"
            app:srcCompat="@drawable/iconocoche"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150sp"
                android:layout_height="120sp"
                app:srcCompat="@drawable/seat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/web1"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="20sp"
                    app:srcCompat="@drawable/web" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="25sp"
                    app:srcCompat="@drawable/icotel" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150sp"
                android:layout_height="120sp"
                app:srcCompat="@drawable/volks" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/web2"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="20sp"
                    app:srcCompat="@drawable/web" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="25sp"
                    app:srcCompat="@drawable/icotel" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150sp"
                android:layout_height="120sp"
                app:srcCompat="@drawable/audi" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/web3"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="20sp"
                    app:srcCompat="@drawable/web" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="25sp"
                    app:srcCompat="@drawable/icotel" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
